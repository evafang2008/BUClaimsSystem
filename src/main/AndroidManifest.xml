<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fangfang.android.buclaimssystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Homepage"
            android:label="@string/title_activity_homepage"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.MainActivity" />
        </activity>
        <activity
            android:name=".Signin"
            android:label="@string/title_activity_signin"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.MainActivity" />
        </activity>
        <activity
            android:name=".Signup"
            android:label="@string/title_activity_signup"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.MainActivity" />
        </activity>
        <activity
            android:name=".ReportClaim"
            android:label="@string/title_activity_report_claim"
            android:parentActivityName=".Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.Homepage" />
        </activity>
        <activity
            android:name=".TowingService"
            android:label="@string/title_activity_towing_service"
            android:parentActivityName=".Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.Homepage" />
        </activity>
        <activity
            android:name=".RepairCenter"
            android:label="@string/title_activity_repair_center"
            android:parentActivityName=".Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.Homepage" />
        </activity>
        <activity
            android:name=".BillPayment"
            android:label="@string/title_activity_bill_payment"
            android:parentActivityName=".Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.Homepage" />
        </activity>
        <activity
            android:name=".ConfirmationPage"
            android:label="@string/title_activity_confirmation_page"
            android:parentActivityName=".Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.Homepage" />
        </activity>
        <activity
            android:name=".TowingDetails"
            android:label="@string/title_activity_towing_details"
            android:parentActivityName=".TowingService"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.TowingService" />
        </activity>
        <activity
            android:name=".RepairCenterDetails"
            android:label="@string/title_activity_repair_center_details"
            android:parentActivityName=".RepairCenter"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.RepairCenter" />
        </activity>
        <activity
            android:name=".ClaimDetails"
            android:label="@string/title_activity_claim_details"
            android:parentActivityName=".Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fangfang.android.buclaimssystem.Homepage" />
        </activity>
    </application>

</manifest>
