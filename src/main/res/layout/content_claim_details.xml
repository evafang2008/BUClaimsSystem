<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/primary_light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fangfang.android.buclaimssystem.ClaimDetails"
    tools:showIn="@layout/activity_claim_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="fangfang.android.buclaimssystem.ReportClaim"
        tools:showIn="@layout/activity_report_claim">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Claim#: BUC-A-999001"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_margin="5dp"
            android:id="@+id/confirm_claimID" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Eva Fang"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: evafang@bellevue.edu"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: (402)-888-9999"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:10 Galvin Rd, Bellevue, NE 68005"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_address"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accident Date: 2/1/2016"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accident Time: 11:50 am"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_time" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car VIN: TED123856"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_carVIN"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Description:\nThis is an accident because of the bad weather of snowstorm which made the road to slick."
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/confirm_claimDesc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:text="@string/text_deductible"
            android:id="@+id/confirm_payment_message"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_gravity="right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/confirm_ok" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Email"
                android:id="@+id/confirm_send_email" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>
